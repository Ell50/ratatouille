<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ratatouille">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ratatouille_logor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar">
        <activity android:name=".views.ZoomImage"></activity>
        <activity android:name=".views.restaurantDetails" />
        <activity android:name=".views.Search" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.loginScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.signupScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.introductionView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.customerView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.forgotPasswordActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>