<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/vp_relativeContainerProfile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#DDB6C6"
            android:paddingHorizontal="20dp"
            android:paddingTop="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_backbutton"/>

            <TextView
                android:id="@+id/ep_profileLabel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:text="Edit Profile"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/ep_saveButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/ep_profileLabel"
                android:layout_alignParentRight="true"
                android:text="Save"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/ep_profileLabel"
                android:layout_marginTop="9dp"
                android:background="@drawable/round_card"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/vp_imageProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_account" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/vp_imageProfile"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vp_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="default_name"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/vp_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="default@gmail.com"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/vp_relativeContainerProfile"
            android:background="@drawable/round_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/ep_username">

                <TextView
                    android:id="@+id/ep_usernameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Username"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.7"
                    android:background="#F8F8F8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/ep_password">

                <TextView
                    android:id="@+id/ep_passwordLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.7"
                    android:background="#F8F8F8"
                    android:inputType="text" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/ep_email">

                <TextView
                    android:id="@+id/ep_emailLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Email"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.7"
                    android:background="#F8F8F8"
                    android:inputType="text" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/ep_phoneNumber">

                <TextView
                    android:id="@+id/ep_phoneNumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change PhoneNumber"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.7"
                    android:background="#F8F8F8"
                    android:inputType="text" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/ep_address">

                <TextView
                    android:id="@+id/ep_addressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Address"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.7"
                    android:background="#F8F8F8"
                    android:inputType="text" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>