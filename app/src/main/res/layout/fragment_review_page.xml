<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reviewpage_refresh">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/vp_background"
                android:paddingHorizontal="20dp"
                android:paddingTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="25dp"
                    android:text="Reviews"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/round_card"
            android:layout_marginHorizontal="15dp"
            android:elevation="15dp"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Restaurant_Name"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/reviewpage_restaurant_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Overall Score"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/reviewpage_restaurant_name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/reviewpage_restaurant_name"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textSize="40dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/reviewpage_overall_score"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" /5"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_star_24"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/round_card"
                android:layout_marginHorizontal="15dp"
                android:elevation="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mask Rate"
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:id="@+id/reviewpage_maskRatingBar"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Rate             "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_tempRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanitation Rate                  "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_sanitationRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social Distancing Rate      "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_socialDistRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Barrier Rate         "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_physicalBarRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_card"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:elevation="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/berlinsans"
                        android:text="Reviews"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="30dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:paddingHorizontal="25dp"
                        android:layout_marginVertical="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/reviewpage_addButton">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:fontFamily="@font/berlinsans"
                            android:textSize="21dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewpage_recyclerView"
                    android:layout_margin="15dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>