<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/helpticketlist_background">
            <TextView
                android:layout_height="40dp"
                android:layout_width="250dp"
                android:text="HelpTicket_title"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/berlinsans"
                android:textColor="@color/black"
                android:id="@+id/helpticketlist_title"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Description: "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:id="@+id/helpticketlist_description"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@id/helpticketlist_title"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@id/helpticketlist_description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:layout_below="@id/helpticketlist_description"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/helpticketlist_date"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/voucherbutton_background"
                android:layout_below="@id/helpticketlist_description"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/helpticketlist_button"
                android:clickable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See Ticket"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:id="@+id/helpticketlist_button_text"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>