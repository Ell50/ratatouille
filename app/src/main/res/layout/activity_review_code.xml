<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/vp_background"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="35dp"
                android:text="Enter Verification"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@android:color/darker_gray"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/reviewcode_nextButton"
                android:layout_alignParentRight="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reviewcode_backButton"
                android:clickable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_backbutton"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/reviewcode_backButton_text"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To continue, please enter your Review Verification Code (RVC)."
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/heebo_light"
            android:textSize="20dp"
            android:layout_marginHorizontal="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/round_card"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:elevation="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:fontFamily="@font/roboto_bold"
                android:textSize="25dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review Verification Code Access"
                android:fontFamily="@font/heebo_light"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/textedit_background">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:hint="Enter your verification code.."
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:inputType="text"
                    android:id="@+id/reviewcode_code"
                    android:layout_marginHorizontal="15dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Did you know?\n RVC can be received right after the restaurant owner generates the code for you.\n This code can only be used once.\n For reviewing once, specific Restaurant only."
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/heebo_light"
                android:textSize="15dp"
                android:layout_marginTop="95dp"
                android:layout_marginHorizontal="15dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seriously, you've reached the bottom."
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp"
            android:fontFamily="@font/heebo_light"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"/>
    </LinearLayout>
</ScrollView>