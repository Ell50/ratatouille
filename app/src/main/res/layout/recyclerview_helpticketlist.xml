<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/helpticketlist_background"
            android:id="@+id/helpticketlist_area">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/helpticket_logo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="HelpTicket_title"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/berlinsans"
                android:textColor="@color/black"
                android:id="@+id/helpticketlist_title"
                android:layout_marginLeft="130dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:layout_below="@id/helpticketlist_title"
                android:layout_marginLeft="130dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/helpticketlist_date"/>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/helpticket_indicator_red"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/helpticketlist_indicator"
                android:clickable="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_arrow"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>