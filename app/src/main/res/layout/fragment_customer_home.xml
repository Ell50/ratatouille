<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:background="#ffb6c1"
            android:id="@+id/home_container">

            <TextView
                android:id="@+id/home_browselabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Browse"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/home_browselabel"
                android:layout_alignParentRight="true"
                android:text="Filter"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:layout_below="@id/home_browselabel">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_search" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="5dp"
                    android:hint="Search..."
                    android:inputType="text"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="17dp" />
            </LinearLayout>

        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending this week"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:id="@+id/trending_viewPager"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_next_arrow"
                    android:id="@+id/home_nextArrow"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Popular"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:paddingHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:id="@+id/mostPopular_recyclerview"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>