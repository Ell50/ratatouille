<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:paddingVertical="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/voucher_background">
            <TextView
                android:layout_height="40dp"
                android:layout_width="250dp"
                android:text="Voucher_Name"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/berlinsans"
                android:textColor="@color/black"
                android:id="@+id/voucher_name"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Discount: "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:id="@+id/voucher_disc"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@id/voucher_name"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/voucher_disc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dine-in"
                android:layout_below="@id/voucher_disc"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/voucher_type"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/voucherbutton_background"
                android:layout_below="@id/voucher_disc"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/voucher_useButton">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use Voucher"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:id="@+id/voucher_mode"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>